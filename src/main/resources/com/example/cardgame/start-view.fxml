<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="700.0" maxWidth="700.0" minHeight="700.0" minWidth="700.0" prefHeight="700.0" prefWidth="700.0" spacing="20.0" style="-fx-background-color: #ECF4F6;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cardgame.StartController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <Label text="War - Card Game" textAlignment="CENTER" textFill="#350376">
      <font>
         <Font name="Agency FB Bold" size="80.0" />
      </font>
   </Label>
   <Label text="Enter your nickname">
      <font>
         <Font name="System Bold" size="19.0" />
      </font>
   </Label>
   <TextField fx:id="nicknameTextField" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="70.0" prefWidth="462.0">
      <font>
         <Font size="30.0" />
      </font>
   </TextField>
   <Label fx:id="errorLabel" textFill="#e40000">
      <font>
         <Font size="19.0" />
      </font>
   </Label>
   <Button mnemonicParsing="false" onAction="#goToGameWindow" prefHeight="50.0" prefWidth="461.0" style="-fx-background-color: #350376;" text="Start" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
      <cursor>
         <Cursor fx:constant="CROSSHAIR" />
      </cursor>
   </Button>
   <Button mnemonicParsing="false" onAction="#goToTableWindow" prefHeight="50.0" prefWidth="461.0" style="-fx-background-color: #350376;" text="Table" textAlignment="CENTER" textFill="WHITE">
      <font>
         <Font name="System Bold" size="24.0" />
      </font>
      <cursor>
         <Cursor fx:constant="CROSSHAIR" />
      </cursor>
   </Button>
   <cursor>
      <Cursor fx:constant="DEFAULT" />
   </cursor>
</VBox>
